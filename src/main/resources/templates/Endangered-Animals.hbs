{{#partial "content"}}
    <h1>ENDANGERED ANIMALS </h1>
    {{#if endangeredAnimal}}
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">NAME</th>
                <th scope="col">SPECIES</th>
                <th scope="col">STATUS</th>
                <th scope="col">HEALTH</th>
            </tr>
            </thead>
            <tbody>
            {{#each endangeredAnimal }}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{name}}</td>
                    <td>{{species}}</td>
                    <td>{{locationId}}</td>
                    <td>{{health}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
    {{/if}}

    <a href="/animalForm">Add a new animal</a><br>
    <a href="/clearTable">Delete all animal entries</a>
{{/partial}}

{{> layout.hbs}}