{{#partial "content"}}
    <h1>ANIMALS SPOTTED IN THE AREA</h1>
    {{#if animal}}
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">NAME</th>
                    <th scope="col">SPECIES</th>
                </tr>
            </thead>
            <tbody>
        {{#each animal }}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{name}}</td>
                    <td>{{species}}</td>
                    <td>{{locationId}}</td>
                </tr>
        {{/each}}
            </tbody>

        </table>
    {{else}}
    {{/if}}


    <a href="/animalForm">Add a new animal</a><br>
    <a href="/clearTable">Delete all animal entries</a>
{{/partial}}

{{> layout.hbs}}